@model Cosmetic

<div class="col-lg-4">
    <img class="img-thumbnail" src="@Model.Image" alt="@Model.Name" />
    <h2>@Model.Name</h2>
    <p>@Model.ShortDescription</p>
    <p>Цена: @Model.Price.ToString("c")</p>
    <p> <a class="btn btn-warning" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-cosmeticId="@Model.CosmeticId" >Добавить в корзину</a></p>
</div>